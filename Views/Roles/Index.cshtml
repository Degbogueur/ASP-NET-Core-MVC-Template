@model IEnumerable<IdentityRole>

@{
    ViewData["Title"] = "Tous les groupes d'utilisateurs";
}

<div class="card shadow">
    <div class="card-header">
        <strong class="card-title">@ViewData["Title"]</strong>
    </div>
    <div class="card-body">
        <form asp-action="Add" method="post" class="w-25">
            <div class="form-group">
                <label>Nouveau groupe</label>
                <div class="input-group mb-3">
                    <input name="roleName" class="form-control" />
                    <div class="input-group-append">
                        <button type="submit" class="btn btn-success">Ajouter</button>
                    </div>
                </div>                
            </div>
        </form>
        <table class="table table-hover table-bordered mt-5">
            <thead>
                <tr>
                    <th>Nom du groupe</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var role in Model)
                {
                    <tr>
                        <td>@role.Name</td>
                        <td class="text-right">
                            <div class="dropdown">
                                <button class="btn btn-sm dropdown-toggle" type="button" id="actions" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                    <span class="text-muted sr-only">Action</span>
                                </button>
                                <div class="dropdown-menu dropdown-menu-right" aria-labelledby="actions" style="line-height: 2;">
                                    <a class="dropdown-item" asp-action="ManagePermissions" asp-route-roleId="@role.Id">Habilitations</a>
                                </div>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>