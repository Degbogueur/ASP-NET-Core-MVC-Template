@model IEnumerable<UserViewModel>

@{
    ViewData["Title"] = "Tous les utilisateurs";
}

<div class="card shadow">
    <div class="card-header">
        <strong class="card-title">@ViewData["Title"]</strong>
    </div>
    <div class="card-body">
        <table class="table table-hover table-bordered">
            <thead class="thead-light">
                <tr>
                    <th>Nom d'utilisateur</th>
                    <th>Nom et prénom(s)</th>
                    <th>Email</th>
                    <th>Etat</th>
                    <th>Groupe d'utilisateurs</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var user in Model)
                {
                    <tr>
                        <td>@user.UserName</td>
                        <td>@user.FullName</td>
                        <td>@user.Email</td>
                        <td>@user.IsActive</td>
                        <td>@string.Join(", ", user.Roles.ToList())</td>
                        <td class="text-right">
                            <div class="dropdown">
                                <button class="btn btn-sm dropdown-toggle" type="button" id="actions" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                    <span class="text-muted sr-only">Action</span>
                                </button>
                                <div class="dropdown-menu dropdown-menu-right" aria-labelledby="actions" style="line-height: 2;">
                                    <a class="dropdown-item" asp-action="ManageRoles" asp-route-userId="@user.Id">Groupe d'utilisateurs</a>
                                </div>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>